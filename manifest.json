{
    "name": "FindU",
    "version": "1.0",
    "description": "Search word that you are looking for and find it inside the video",
    "permissions": [
        "activeTab",
        "declarativeContent",
        "notifications",
        "storage",
        "tabs",
        "*://*.youtube.com/*",
        "https://findyouu.xyz/*"
    ],
    "browser_action": {
        "default_popup": "./pages/popup.html"
    },
    "web_accessible_resources": [
        "scripts/*",
        "pages/*",
        "config/*"
    ],
    "background": {
        "page": "./pages/background.html",
        "persistent": false
    },
    "content_scripts": [{
        "all_frames": true,
        "js": [
            "libs/axios.min.js",
            "libs/jquery.min.js",
            "libs/bootstrap.min.js",
            "./scripts/youtube.js"
        ],
        "matches": [
            "https://*.youtube.com/*"
        ],
        "run_at":"document_idle",
        "css": [
            "./inject.css",
            "libs/bootstrap.min.css"
        ]
    }, {
        "js": [
            "libs/firebase-app.js",
            "libs/firebase-auth.js",
            "libs/axios.min.js",
            "libs/jquery.min.js",
            "scripts/firebase.js"
        ],
        "matches": [
            "https://apcfindu.web.app/*"
        ],
        "run_at": "document_end"
    }, {
        "js": [
            "libs/firebase-app.js",
            "libs/firebase-auth.js",
            "scripts/firebase-logout.js"
        ],
        "matches": [
            "https://apcfindu.web.app/auth/signout"
        ],
        "run_at": "document_start"
    }],
    "commands": {
        "search-bar": {
            "suggested_key": {
                "default": "Ctrl+Shift+F",
                "mac": "Command+Shift+F"
            },
            "description": "show search bar"
        }
    },
    "icons": {},
    "manifest_version": 2,
    "content_security_policy": "script-src 'self' https://apcfindu.web.app/* https://www.gstatic.com/ https://*.firebaseio.com https://www.googleapis.com https://findyouu.xyz/*; object-src 'self';"

}