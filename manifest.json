{
    "name": "FindU",
    "version": "1.0",
    "description": "Search word that you are looking for and find it inside the video",
    "permissions": [
        "activeTab",
        "declarativeContent",
        "notifications",
        "storage",
        "tabs",
        "*://*.youtube.com/*",
        "https://202.30.30.3:5678/*"
    ],    
    "browser_action": {
        "default_popup": "./pages/popup.html"
    },
    "web_accessible_resources": [
        "scripts/*",
        "pages/*"
    ],
    "background": {
        "page": "./pages/background.html",
        "persistent": false
    },
    "content_scripts": [{
        "all_frames": true,
        "js": [
            "axios.min.js",
            "jquery.min.js", "./scripts/main.js"
        ],
        "matches": [
            "https://*.youtube.com/*"
        ],
        "css": [
            "./inject.css"
        ],
        "run_at": "document_end"
    }],
    "commands": {
        "search-bar": {
            "suggested_key": {
                "default": "Ctrl+Shift+F",
                "mac": "Command+Shift+F"
            },
            "description": "show search bar"
        }
    },
    "icons": {},
    "manifest_version": 2,
    "content_security_policy": "script-src 'self' https://www.gstatic.com/ https://*.firebaseio.com https://www.googleapis.com https://202.30.30.3:5678/; object-src 'self'"

}